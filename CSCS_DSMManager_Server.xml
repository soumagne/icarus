<ServerManagerConfiguration>

  <!-- ================================================================ -->
  <!-- DSM                                                              -->
  <!-- ================================================================ -->

  <ProxyGroup name="icarus_helpers">
    <Proxy name="DSMManager" class="vtkDSMManager">
      
      <Property name="CreateDSM"
                command="CreateDSM">
      </Property>      
      <Property name="DestroyDSM"
                command="DestroyDSM">
      </Property>
      <Property name="ClearDSM"
                command="ClearDSM">
      </Property>
      <Property name="ConnectDSM"
                command="ConnectDSM">
      </Property>
      <Property name="DisconnectDSM"
                command="DisconnectDSM">
      </Property>
      <Property name="PublishDSM"
                command="PublishDSM">
      </Property>
      <Property name="UnpublishDSM"
                command="UnpublishDSM">
      </Property>
      <Property name="H5Dump"
                command="H5Dump">
      </Property>
      <Property name="H5DumpLight"
                command="H5DumpLight">
      </Property>
      <Property name="H5DumpXML"
                command="H5DumpXML">
      </Property>
      <Property name="GenerateXMFDescription"
                command="GenerateXMFDescription">
      </Property>
      <Property name="SendDSMXML"
                command="SendDSMXML">
      </Property>

      <Property name="RequestLocalChannel"
                command="RequestLocalChannel">
      </Property>
      <Property name="RequestRemoteChannel"
                command="RequestRemoteChannel">
      </Property>

      <IntVectorProperty
        name="DsmIsServer"
        command="SetDsmIsServer"
        number_of_elements="1"
        default_values="0">
      </IntVectorProperty>
      
      <IntVectorProperty
        name="DsmCommType"
        command="SetDsmCommType"
        number_of_elements="1"
        default_values="0">
      </IntVectorProperty>
      
      <StringVectorProperty
        name="PublishedServerHostName"
        command="GetPublishedServerHostName"
        information_only="1"
        number_of_elements="1">
        <SimpleStringInformationHelper/>
      </StringVectorProperty>
      
      <IntVectorProperty
        name="PublishedServerPort"
        command="GetPublishedServerPort"
        information_only="1"
        number_of_elements="1"
        default_values="0">
        <SimpleIntInformationHelper/>
      </IntVectorProperty>
      
      <StringVectorProperty
        name="ServerHostName"
        command="SetPublishedServerHostName"
        number_of_elements="1">
      </StringVectorProperty>
      
      <IntVectorProperty
        name="ServerPort"
        command="SetPublishedServerPort"
        number_of_elements="1"
        default_values="0">
      </IntVectorProperty>
      
      <StringVectorProperty
        name="XMFDescriptionFilePath"
        command="SetXMFDescriptionFilePath"
        number_of_elements="1">
      </StringVectorProperty>
      
       <IntVectorProperty
        name="AcceptedConnection"
        command="GetAcceptedConnection"
        information_only="1"
        number_of_elements="1"
        default_values="0">
        <SimpleIntInformationHelper/>
      </IntVectorProperty>

      <IntVectorProperty
        name="DsmUpdateReady"
        command="GetDsmUpdateReady"
        default_values="0"
        information_only="1"
        number_of_elements="1">
        <SimpleIntInformationHelper/>
      </IntVectorProperty>

      <Property name="ClearDsmUpdateReady"
                command="ClearDsmUpdateReady">
      </Property>      

    </Proxy>

    <!-- ================================================================= -->
    <WriterProxy name="XdmfWriter4" class="vtkXdmfWriter4">
      <Documentation
        short_help="Write data in Xdmf files.">
        Writer to writer data in eXtensible Data Model and Format *(XDMF) files.
      </Documentation>
      <InputProperty name="Input" command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type" composite_data_supported="0">
          <DataType value="vtkDataSet"/>
        </DataTypeDomain>
        <Documentation>
          The input filter/source whose output dataset is to written to the file.
        </Documentation>
      </InputProperty>

      <StringVectorProperty
        name="FileName"
        command="SetFileName"
        number_of_elements="1">
      </StringVectorProperty>

      <ProxyProperty name="DSMManager" 
                     command="SetDSMManager">
        <ProxyGroupDomain name="groups">
          <Group name="icarus_helpers"/>
        </ProxyGroupDomain>
        <ProxyListDomain name="proxy_list">
          <Proxy group="icarus_helpers" 
                 name="DSMManager" />
        </ProxyListDomain>
        <Documentation>
          The DSM Manager
        </Documentation>
      </ProxyProperty>

      <Hints>
        <Property name="Input" show="0"/>
        <Property name="FileName" show="0"/>
      </Hints>
      <!-- End of XdmfWriter -->
    </WriterProxy>

    <!-- ================================================================= -->
    <SourceProxy name="XdmfReader4" class="vtkXdmfReader4">
      <Documentation
        short_help="Read data from Xdmf/HDF5 files.">
        Reader to read HDF5 data using eXtensible Data Model and Format *(XDMF) files.
      </Documentation>

      <Property name="Modified"
                command="Modified">
      </Property>

      <StringVectorProperty
        name="FileName"
        command="SetFileName"
        number_of_elements="1">
      </StringVectorProperty>

      <ProxyProperty name="DSMManager" 
                     command="SetDSMManager">
        <ProxyGroupDomain name="groups">
          <Group name="icarus_helpers"/>
        </ProxyGroupDomain>
        <ProxyListDomain name="proxy_list">
          <Proxy group="icarus_helpers" 
                 name="DSMManager" />
        </ProxyListDomain>
        <Documentation>
          The DSM Manager
        </Documentation>
      </ProxyProperty>

      <Hints>
        <Property name="FileName" show="0"/>
        <Property name="DSMManager" show="0"/>
      </Hints>
      <!-- End of XdmfReader -->
    </SourceProxy>

  </ProxyGroup>


</ServerManagerConfiguration>
